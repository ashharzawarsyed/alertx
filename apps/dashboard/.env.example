# Admin Dashboard Environment Configuration
# Copy this file to .env and fill in your actual values

# API Configuration
VITE_API_URL=http://localhost:5001
VITE_API_VERSION=v1

# Application Information
VITE_APP_NAME=AlertX Admin Dashboard
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION=Emergency Management System Admin Interface

# Environment
VITE_NODE_ENV=development

# Authentication
VITE_JWT_EXPIRY=604800000
VITE_REFRESH_TOKEN_EXPIRY=2592000000

# Map Configuration (for emergency tracking)
VITE_MAPBOX_ACCESS_TOKEN=your-mapbox-access-token
VITE_GOOGLE_MAPS_API_KEY=your-google-maps-api-key
VITE_DEFAULT_MAP_CENTER_LAT=40.7128
VITE_DEFAULT_MAP_CENTER_LNG=-74.0060
VITE_DEFAULT_MAP_ZOOM=10

# Real-time Configuration
VITE_SOCKET_URL=http://localhost:5000
VITE_SOCKET_PATH=/socket.io
VITE_ENABLE_REAL_TIME=true

# Dashboard Features
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_NOTIFICATIONS=true
VITE_ENABLE_DARK_MODE=true
VITE_ENABLE_EXPORT=true

# Emergency System Configuration
VITE_MAX_EMERGENCY_RADIUS=50
VITE_AUTO_REFRESH_INTERVAL=30000
VITE_EMERGENCY_SOUND_ALERTS=true

# File Upload Configuration
VITE_MAX_FILE_SIZE=10485760
VITE_ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf

# Performance Settings
VITE_DEBOUNCE_DELAY=300
VITE_PAGINATION_SIZE=20
VITE_CACHE_TTL=300000

# Monitoring and Debugging
VITE_ENABLE_CONSOLE_LOGS=true
VITE_ENABLE_ERROR_REPORTING=true
VITE_ERROR_REPORTING_URL=http://localhost:5000/api/v1/errors

# Branding and Theme
VITE_BRAND_NAME=AlertX
VITE_BRAND_COLOR=#3B82F6
VITE_THEME_MODE=light
