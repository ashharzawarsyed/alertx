# Hospital Dashboard Environment Configuration
# Copy this file to .env and fill in your actual values

# API Configuration
VITE_API_URL=http://localhost:5001
VITE_API_VERSION=v1

# Application Information
VITE_APP_NAME=AlertX Hospital Dashboard
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION=Hospital Management Interface for Emergency Services

# Environment
VITE_NODE_ENV=development

# Authentication & Authorization
VITE_JWT_EXPIRY=604800000
VITE_HOSPITAL_ROLE=hospital
VITE_AUTO_LOGIN_REDIRECT=/hospital/dashboard

# Real-time Configuration
VITE_SOCKET_URL=http://localhost:5000
VITE_SOCKET_NAMESPACE=/hospital
VITE_ENABLE_REAL_TIME=true
VITE_HEARTBEAT_INTERVAL=30000

# Hospital Management Features
VITE_ENABLE_BED_MANAGEMENT=true
VITE_ENABLE_PATIENT_TRACKING=true
VITE_ENABLE_AMBULANCE_COORDINATION=true
VITE_ENABLE_EMERGENCY_ALERTS=true

# Map and Location Services
VITE_MAPBOX_ACCESS_TOKEN=your-mapbox-access-token
VITE_GOOGLE_MAPS_API_KEY=your-google-maps-api-key
VITE_ENABLE_LOCATION_SERVICES=true
VITE_LOCATION_UPDATE_INTERVAL=60000

# Notification Settings
VITE_ENABLE_PUSH_NOTIFICATIONS=true
VITE_ENABLE_EMAIL_NOTIFICATIONS=true
VITE_ENABLE_SMS_NOTIFICATIONS=false
VITE_NOTIFICATION_SOUND=true

# Hospital Capacity Management
VITE_LOW_CAPACITY_THRESHOLD=20
VITE_CRITICAL_CAPACITY_THRESHOLD=10
VITE_AUTO_CAPACITY_UPDATE=true

# Performance and UI
VITE_THEME_MODE=light
VITE_ENABLE_ANIMATIONS=true
VITE_DEBOUNCE_DELAY=500
VITE_AUTO_SAVE_INTERVAL=30000

# Data Refresh Intervals
VITE_PATIENT_DATA_REFRESH=15000
VITE_BED_STATUS_REFRESH=10000
VITE_EMERGENCY_REFRESH=5000

# File Upload (for patient documents, etc.)
VITE_MAX_FILE_SIZE=5242880
VITE_ALLOWED_FILE_TYPES=image/jpeg,image/png,application/pdf

# Reporting and Analytics
VITE_ENABLE_REPORTS=true
VITE_REPORT_EXPORT_FORMATS=pdf,csv,xlsx
VITE_ANALYTICS_ENABLED=true

# Integration Settings
VITE_ENABLE_EHR_INTEGRATION=false
VITE_ENABLE_LAB_INTEGRATION=false
VITE_ENABLE_PHARMACY_INTEGRATION=false
