# AlertX Monorepo Environment Configuration
# Root environment variables shared across all applications
# Copy this file to .env and fill in your actual values

# Project Information
PROJECT_NAME=AlertX
PROJECT_VERSION=1.0.0
PROJECT_DESCRIPTION=Smart Ambulance Dispatch & Hospital Coordination System

# Environment
NODE_ENV=development
ENVIRONMENT=development

# Global Database Configuration
MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/alertx
DATABASE_NAME=alertx

# Global API Configuration
API_BASE_URL=http://localhost:5000
AI_SERVICE_URL=http://localhost:8000

# Global Security
GLOBAL_JWT_SECRET=your-super-secret-jwt-key-here
ENCRYPTION_KEY=your-encryption-key-here

# Service Ports
BACKEND_PORT=5000
AI_SERVICE_PORT=8000
DASHBOARD_PORT=5173
HOSPITAL_DASHBOARD_PORT=5174
USER_APP_PORT=19006
DRIVER_APP_PORT=19007

# Cross-Origin Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:5174,http://localhost:8080,http://localhost:19006,http://localhost:19007

# External Services Configuration
MAPBOX_ACCESS_TOKEN=your-mapbox-access-token
GOOGLE_MAPS_API_KEY=your-google-maps-api-key
GOOGLE_PLACES_API_KEY=your-google-places-api-key

# Communication Services
EMAIL_SERVICE_PROVIDER=gmail
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token

# Cloud Storage
CLOUDINARY_CLOUD_NAME=your-cloudinary-cloud-name
CLOUDINARY_API_KEY=your-cloudinary-api-key
CLOUDINARY_API_SECRET=your-cloudinary-api-secret

# Monitoring and Analytics
ENABLE_MONITORING=true
ANALYTICS_PROVIDER=custom
LOG_LEVEL=info

# Feature Flags
ENABLE_AI_TRIAGE=true
ENABLE_REAL_TIME_TRACKING=true
ENABLE_PUSH_NOTIFICATIONS=true
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_SMS_NOTIFICATIONS=false

# Development Tools
ENABLE_HOT_RELOAD=true
ENABLE_DEBUG_TOOLS=true
ENABLE_ERROR_OVERLAY=true
