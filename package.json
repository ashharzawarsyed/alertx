{
  "name": "alertx",
  "version": "1.0.0",
  "description": "Smart Ambulance Dispatch & Hospital Coordination System",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "backend": "npm run start --workspace=backend",
    "dashboard": "npm run start --workspace=dashboard",
    "hospital-dashboard": "npm run dev --workspace=hospital-dashboard",
    "ai-service": "npm run start --workspace=ai-service",
    "emergency-user-app": "npm run start --workspace=emergency-user-app",
    "emergency-driver-app": "npm run start --workspace=emergency-driver-app",
    "user-app:expo": "cd apps/emergency-user-app && npx expo start",
    "driver-app:expo": "cd apps/emergency-driver-app && npx expo start",
    "install-all": "npm install",
    "clean": "npm run clean --workspaces --if-present"
  },
  "keywords": [
    "ambulance",
    "dispatch",
    "hospital",
    "emergency",
    "react-native",
    "react",
    "nodejs",
    "mongodb"
  ],
  "authors": [
    "BSCS Final Year Students"
  ],
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "axios": "^1.12.2"
  },
  "devDependencies": {
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.5"
  }
}
