# Workspace Configuration
# Prevent automatic hoisting of conflicting packages
# Web apps use React 19.0.0, React Native apps use React 19.1.0

# Disable hoisting for all React-related packages to prevent version conflicts
hoist-pattern[]=!react
hoist-pattern[]=!react-dom  
hoist-pattern[]=!react-native
hoist-pattern[]=!@react-navigation/*
hoist-pattern[]=!expo-router
hoist-pattern[]=!@expo/*

# Allow other packages to be hoisted
hoist-pattern[]=*

# Use legacy peer deps resolution to handle conflicts
legacy-peer-deps=true

# Don't auto-install peers to avoid conflicts
auto-install-peers=false